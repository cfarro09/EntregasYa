<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.orderdetail.InfoOrderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:padding="4dp"
                    android:id="@+id/button_status_order"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@drawable/ic_playlist_add_check_black_24dp"
                    android:background="@drawable/sty_button_primary"
                    android:text="Asignar estado entregado"
                    android:textColor="#FFF" />
                <Button
                    android:padding="4dp"
                    android:id="@+id/button_take_photo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/button_status_order"
                    android:layout_marginStart="10dp"
                    android:drawableStart="@android:drawable/ic_menu_camera"
                    android:background="@drawable/sty_button_secondary"
                    android:text="Tomar foto"
                    android:textColor="#FFF" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_producto"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_name"
                        />
                    <EditText
                        android:focusable="false"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:id="@+id/product_name"
                        android:inputType="textMultiLine"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        />
                    <EditText
                        android:focusable="false"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:id="@+id/order_status"
                        android:inputType="textMultiLine"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recyclerView_gallery"/>
                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_pickup"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_pickup"
                        android:labelFor="@+id/order_pickup_address"
                        />
                    <EditText
                        android:focusable="false"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:id="@+id/order_pickup_address"
                        android:inputType="textMultiLine"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reference"
                        />
                    <EditText
                        android:focusable="false"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:inputType="textMultiLine"
                        android:id="@+id/order_pickup_reference"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ubigeo"
                        />
                    <EditText
                        android:focusable="false"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:id="@+id/order_pickup_ubigeo"
                        android:textSize="15sp"
                        android:autofillHints="@string/example_ubigeo"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/contact_name"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:enabled="false"
                                android:id="@+id/order_pickup_contact_name"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/contact_phone"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:enabled="false"
                                android:id="@+id/order_pickup_contact_phone"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_delivery"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_delivery"
                        android:labelFor="@+id/order_delivery_address"
                        />
                    <EditText
                        android:focusable="false"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:id="@+id/order_delivery_address"
                        android:inputType="textMultiLine"
                        android:textSize="15sp"
                        android:autofillHints="@string/example_address"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reference"
                        />
                    <EditText
                        android:focusable="false"
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:id="@+id/order_delivery_reference"
                        android:textSize="15sp"
                        android:autofillHints="@string/example_reference"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ubigeo"
                        />
                    <EditText
                        android:enabled="false"
                        android:layout_width="match_parent"
                        android:id="@+id/order_delivery_ubigeo"
                        android:focusable="false"
                        android:textSize="15sp"
                        android:autofillHints="@string/example_ubigeo"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/contact_name"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/order_delivery_contact_name"
                                android:textSize="15sp"
                                android:enabled="false"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/contact_phone"
                                />
                            <EditText
                                android:layout_width="match_parent"
                                android:id="@+id/order_delivery_contact_phone"
                                android:enabled="false"
                                android:textSize="15sp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>