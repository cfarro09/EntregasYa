<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/conttmp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_order_code"
                android:text="1545646556"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="ENTREGADO"
                android:textSize="15sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/item_products"
            android:text="URI LIBERTAD CRISPOIN"
            android:layout_below="@id/conttmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_below="@+id/item_products"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/pickup"
                />
                <TextView
                    android:id="@+id/item_pickup_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jiron ernqiue barron 1323 Lince"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/item_pickup_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carlos Farro"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/item_pickup_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+51943856850"
                    android:visibility="gone"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/delivery"
                    />
                <TextView
                    android:id="@+id/item_delivery_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primero de Mayo  778 Urrunaga"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/item_delivery_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="David Diaz"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/item_delivery_phone"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+51943856850"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>