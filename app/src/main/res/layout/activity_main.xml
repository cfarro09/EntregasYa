<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/container_image_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#000">

        <ImageView
            android:id="@+id/imageUserConf"
            android:layout_width="150dp"
            android:src="@drawable/persona_sin_foto"
            android:layout_height="150dp" />

        <ImageView
            android:id="@+id/showManageConf"
            android:layout_width="45dp"
            android:padding="3dp"
            android:layout_height="45dp"
            android:background="@drawable/background_radious"
            android:layout_alignEnd="@+id/imageUserConf"
            android:layout_alignBottom="@+id/imageUserConf"
            android:clickable="false"
            android:focusable="false"
            android:src="@android:drawable/ic_menu_camera" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/container_image_profile"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="dddddd"/>
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>